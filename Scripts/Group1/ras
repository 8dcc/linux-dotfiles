#!/bin/sh

###########################
#        SETTINGS         #
###########################
st_opacity=true
menu_opacity=false        # Will be checked only if st_opacity is true
change_res=false
target_res=1680x1050
###########################


# ------------------------------------------


# Resolution
if [[ $change_res == true ]]; then
	xrandr --size $target_res
fi

# Background
feh --bg-scale ~/.wallpaper.png

# Opacity
if [[ $st_opacity == true ]]; then
	if [[ $menu_opaticy == true ]]; then
		picom -m 1 --opacity-rule '97:name *= "st"' --opacity-rule '97:name *?= "Brave"' --opacity-rule '98:name *?= "FireDragon"' --opacity-rule '98:name *?= "Firefox"' --opacity-rule '95:name *?= ".mp3"' --opacity-rule '95:name *?= "ranger"' &
	else
		picom -m 0 -e 1 --opacity-rule '97:name *= "st"' --opacity-rule '97:name *?= "Brave"' --opacity-rule '98:name *?= "FireDragon"' --opacity-rule '98:name *?= "Firefox"' --opacity-rule '95:name *?= ".mp3"' --opacity-rule '95:name *?= "ranger"' &
	fi
else
	picom -m 0 -e 1 --opacity-rule '97:name *?= "Brave"' --opacity-rule '98:name *?= "FireDragon"' --opacity-rule '98:name *?= "Firefox"' &
fi

# Statusbar loop
bash ~/.dwmbar 2>/dev/null

